@model Blogging.Web.Models.ViewModels.LoginRequest
@{
}
<div class="bg-opacity-10 py-5">
    <div class="container">
        <div class="col-md-6 offset-md-3">
            <div class="bg-secondary bg-opacity-10 py-5 rounded px-5">
                <form action="" method="POST">
                    <h4 class="mb-4">Login Here</h4>
                    <div class="form-group mb-3">
                        <label class="control-label">User Name*</label>
                        <input type="text" id="username" asp-for="UserName" class="form-control" />
                    </div>
                    <div class="form-group mb-3">
                        <label class="control-label">User Password*</label>
                        <input type="password" id="password" asp-for="Password" class="form-control" />
                    </div>
                    <div class="form-group mb-3 mt-3">
                        <button type="submit" id="submit_btn" class="btn btn-dark">Login</button>
                        <input type="hidden" asp-for="ReturnUrl" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>