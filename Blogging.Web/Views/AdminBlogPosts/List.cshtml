@model List<Blogging.Web.Models.Domain.BlogPost>
@{
}
<div class="bg-secondary bg-opacity-10 py-4">
    <div class="container">
        <div class="d-flex align-items-center justify-content-between">
            <h4 class="mb-0">Add New Blog Post - Admin Functionality</h4>
        </div>
    </div>
</div>
<div class="bg-opacity-10 py-5">
    <div class="container">
        @if (Model != null && Model.Any())
        {
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Heading</th>
                        <th>Tags</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var blogPost in Model)
                    {
                        <tr>
                            <td>@blogPost.Id</td>
                            <td>@blogPost.Heading</td>
                            <td>
                                <div class="d-flex align-items-center">
                                    @foreach (var tag in blogPost.Tags)
                                    {
                                        <span class="badge badge-pill bg-secondary me-2">@tag.Name</span>
                                    }
                                </div>
                        </td>
                        <td>
                            <a asp-area="" asp-controller="AdminBlogPosts" asp-action="Edit" asp-route-id="@blogPost.Id">Edit</a>
                        </td>
                    </tr>
                }
            </tbody>
            </table>
        }
        else
        {
            <p>No blog posts found!</p>
        }
    </div>
</div>